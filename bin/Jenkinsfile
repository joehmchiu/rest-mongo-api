pipeline {

  environment {
    repos = "https://github.com/joehmchiu/rest-mongo-auto-test.git"
    branch = "master"
    cid = "github-demo"
    workspace = pwd()
  }

  agent any
  stages {
    stage('Build') {
      steps {
        echo 'Hi, GeekFlare. Starting to build the App.'
      }
    }
    stage('Test') {
      steps {
        echo "testing..."
      }
    }
    stage('Deploy') {
      steps {
        git url: repos, credentialsId: cid, branch: branch
        sh "pwd"
        sh "ls -lthr"
        sh "cd ${workspace}/bin"
        sh "ls -lthr"
        // load "./go"
      }
    }
    stage('Ready') {
      steps {
        echo "App is Ready"
      }
    }
  }
}
