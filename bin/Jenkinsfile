pipeline {

  environment {
    repos = "https://github.com/joehmchiu/rest-mongo-auto-test.git"
    branch = "master"
  }

  agent any
  stages {
    stage('Build') {
      steps {
        echo 'Hi, GeekFlare. Starting to build the App.'
      }
    }
    stage('Test') {
      steps {
        echo "testing..."
      }
    }
    stage('Deploy') {
      steps {
        git url: repos, credentialsId: "github-demo", branch: branch
        sh "ls -ltrhR"
      }
    }
    stage('Prod') {
      steps {
        echo "App is Prod Ready"
      }
    }
  }
}
