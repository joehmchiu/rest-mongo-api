pipeline {

  environment {
    repos = "https://github.com/joehmchiu/rest-mongo-auto-test.git"
    branch = "master"
    cid = "github-demo"
    workspace = pwd()
  }

  agent any
  stages {
    stage('Start Task') {
      steps {
        echo 'Hi, starting to build the App.'
      }
    }
    stage('Pre Check') {
      steps {
        git url: repos, credentialsId: cid, branch: branch
        sh "pwd"
        sh "cd ${workspace}/bin/; ls -lthr"
        load "${workspace}/go"
      }
    }
    stage('App is Ready') {
      steps {
        echo "App is Ready"
      }
    }
  }
}
